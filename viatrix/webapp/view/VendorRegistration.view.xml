        <content>
            <VBox>
                <Toolbar class="voHideUnderline voToolBarlabel sapUiMediumMarginBeginEnd sapUiSmallMarginTop">
                    <ToolbarSpacer />
                    <Button class="voBtnEmphasized" text="{i18n>CreatePOVendor}" press="onCreatePOVendor" type="Emphasized" />
