<mvc:View controllerName="viatrix.controller.VendorRegistrationForm" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Wizard id="supplierdetailId" renderMode="Page" showNextButton="true" class="sigWizard" navigationChange="handleNavigationChange">
                <WizardStep id="companyinfoID" class="sigWizardstep" title="General Information" validated="true">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.GeneralInformation" type="XML" />
                    </content>
                </WizardStep>
                <WizardStep id="banktaxId" class="sigWizardstep" title="Tax Information" validated="true">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.TaxInformation" type="XML" />
                    </content>
                </WizardStep>
                <WizardStep id="contactId" class="sigWizardstep" title="Bank Information" validated="true">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.BankInformation" type="XML" />
                    </content>
                </WizardStep>
                <WizardStep title="Company Code Information">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.CompanyCodeInformation" type="XML" />
                    </content>
                </WizardStep>
                <WizardStep title="Purchasing Organisation Information">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.PurchasingOrganisationInformation" type="XML" />
                    </content>
                </WizardStep>
                <WizardStep title="Documents and Attachments">
                    <content>
                        <core:Fragment fragmentName="viatrix.fragment.DocumentAndAttachments" type="XML" />
                    </content>
                </WizardStep>
            </Wizard>
        </content>
    </Page>
</mvc:View>
